[Unit]
Description=Apache Spark Master and Slave Servers
After=network.target
After=systemd-user-sessions.service
After=network-online.target

[Service]
User=ec2-user
Type=forking
ExecStart=/home/ec2-user/spark/sbin/start-all.sh
ExecStop=/home/ec2-user/spark/sbin/stop-all.sh
TimeoutSec=90
Restart= always
RestartSec= 30
StartLimitInterval=350
StartLimitBurst=10
PIDFile=/tmp/spark-ec2-user-org.apache.spark.deploy.master.Master-1.pid

[Install]
WantedBy=multi-user.target